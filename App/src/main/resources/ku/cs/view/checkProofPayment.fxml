<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controller.checkProofPaymentController">
   <children>
      <VBox layoutY="9.0" prefHeight="228.0" prefWidth="1220.0">
         <children>
            <ImageView fx:id="logo" fitHeight="95.0" fitWidth="134.0" pickOnBounds="true" preserveRatio="true" />
            <HBox prefHeight="59.0" prefWidth="1200.0" spacing="100.0" style="-fx-background-color: #a3e9a4;">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <children>
                  <Label prefHeight="18.0" prefWidth="0.0" />
                  <Button mnemonicParsing="false" onAction="#goCheckOrder" style="-fx-background-radius: 50; -fx-background-color: #6de2ff;" text="ตรวจสอบ Order">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#goVerifyPayment" style="-fx-background-radius: 50; -fx-background-color: #6de2ff;" text="ตรวจสอบการชำระเงิน">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" style="-fx-background-radius: 50; -fx-background-color: a49f9f;" text="ลงทะเบียนสินค้า" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" style="-fx-background-radius: 50; -fx-background-color: a49f9f;" text="เตรียมและจัดส่งสินค้า" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="86.0" style="-fx-background-radius: 50; -fx-background-color: a49f9f;" text="สั่งของ" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="61.0" layoutY="266.0" prefHeight="448.0" prefWidth="415.0">
         <children>
            <TableView fx:id="paymentList" prefHeight="459.0" prefWidth="415.0">
              <columns>
                <TableColumn prefWidth="75.0" text="C1" />
                <TableColumn prefWidth="75.0" text="C2" />
              </columns>
            </TableView>
         </children>
      </VBox>
      <VBox layoutX="585.0" layoutY="266.0" prefHeight="448.0" prefWidth="346.0">
         <children>
            <ImageView fx:id="proofPayment" fitHeight="450.0" fitWidth="348.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
      <Button layoutX="1015.0" layoutY="370.0" mnemonicParsing="false" style="-fx-background-radius: 50; -fx-background-color: #ff1b1b;" text="ปฏิเสธคำสั่งซื้อ">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="1015.0" layoutY="311.0" mnemonicParsing="false" onAction="#confirmCheck" style="-fx-background-radius: 50; -fx-background-color: #2cdc38;" text="ยืนยันคำสั่งซื้อ">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
